FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    "(XMIN|XMAX|YMIN|YMAX|ZMIN)"
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    ZMAX
    {
        type            pressureInletOutletVelocity;
        value           uniform (0 0 0);
    }
    HULL
    {
        type            movingWallVelocity;
        value           uniform (0 0 0);
    }
}


