FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    "(XMIN|XMAX|YMIN|YMAX|ZMIN)"
    {
        type            fixedFluxPressure;
        phi             phiAbs;
        value           uniform 0;
    }
    ZMAX
    {
        type            totalPressure;
        p0              uniform 0;
        U               U;
        phi             phi;
        rho             rho;
        psi             none;
        gamma           1;
        value           uniform 0;
    }
    HULL
    {
        type            fixedFluxPressure;
        phi             phiAbs;
        value           uniform 0;
    }
}

